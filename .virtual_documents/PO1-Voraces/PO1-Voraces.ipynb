#testeable
class Arco:
    def __init__(self, origen, coste, destino):
        self.origen = origen
        self.coste = coste
        self.destino = destino

    def __lt__(self, obj):
        return self.coste < obj.coste

    def __str__(self):
        return f"Arco({self.origen}--{self.coste}-->{self.destino})"

    def __repr__(self):
        return f"Arco({self.origen}-{self.coste}->{self.destino})"


